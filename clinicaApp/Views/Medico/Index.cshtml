@model List<clinicaApp.Models.Medico>

@{
    ViewData["Title"] = "Médicos Disponibles";
    Layout = "_Layout"; // Cambia según tu proyecto
}

<div class="container mt-4">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-4 mb-4">
                <div class="card h-100 shadow-sm text-center p-3">
                    <img src="@item.Foto"
                         class="card-img-top rounded-circle mx-auto d-block mt-3"
                         style="width: 150px; height: 150px; object-fit: cover;"
                         alt="Foto de @item.User.Nombre" />
                    <div class="card-body">
                        <h5 class="card-title">@item.User.Nombre @item.User.Paterno @item.User.Materno</h5>
                        <p class="card-text mb-1"><strong>Especialidad:</strong> @item.Especialidad</p>
                        <p class="card-text mb-1"><strong>Sexo:</strong> @item.User.Sexo</p>
                        <p class="card-text"><strong>Teléfono:</strong> @item.User.Telefono</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
