@using Newtonsoft.Json
@model clinicaApp.ViewModels.EspecialidadViewModel

@{
    ViewData["Title"] = "Registrar Especialidad";
    Layout = "_LayoutAdminLTE";
}

    <section class="content-header">
        <div class="container-fluid">
            <h1>@ViewData["Title"]</h1>
        </div>
    </section>

<section class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-sm-12">
                <div class="card card-primary shadow rounded">
                    <div class="card-header bg-primary text-white rounded-top">
                        <h3 class="card-title mb-0">Nueva especialidad</h3>
                    </div>

                    <form asp-action="Create" enctype="multipart/form-data" method="post" id="formEspecialidad">
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Nombre">Nombre</label>
                                <input asp-for="Nombre" id="nombreEspecialidad" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Descripcion">Descripción</label>
                                <input asp-for="Descripcion" class="form-control" />
                                <span asp-validation-for="Descripcion" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="card-footer d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Registrar</button>
                            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Volver</a>
                        </div>
                    </form>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger m-3">
                            <ul class="mb-0">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <script src="~/js/EspecialidadCreate.js"></script>
}