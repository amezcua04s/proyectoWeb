@{
    ViewData["Title"] = "Inicio";
    Layout = "_Layout";
    var path = Url.Content("~/images/hospital");
}

<header>
    <nav class="navbar navbar-expand-lg barra-navegacion">
        <div class="container d-flex align-items-center">
            <img src="@($"{path}/hospital-logo.jpeg")" alt="Hospital Johnson Logo" class="me-3" style="height: 80px;">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menu" aria-controls="menu" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>
</header>

<main class="container my-5">
    <section class="row align-items-center bg-light p-4 rounded shadow mx-3 my-4" style="background-color: #e4e8ec;">
        <div class="col-md-6 mb-3 mb-md-0">
            <h2 class="text-secondary">Asistencia Médica</h2>
            <h3 class="text-dark">Hospital Johnson</h3>
            <p>
                Hospital Johnson es una institución médica de prestigio nacional con más de 15 especialidades, instalaciones con el equipo necesario, tecnología y profesionales capacitados.
            </p>
        </div>
        <div class="col-md-6 d-flex justify-content-center">
            <img src="@($"{path}/hospital.png")" alt="Hospital Johnson" class="img-fluid rounded" style="max-width: 50%; height: auto;">
        </div>
    </section>

    <section id="especialidades" class="mb-5">
        <h2 class="text-center mb-4">Especialidades</h2>

        <section class="slider-area mb-5">
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="@($"{path}/carrusel1.jpeg")" class="d-block w-100" alt="Centro de Cirugía Robótica">
                    </div>
                    <div class="carousel-item">
                        <img src="@($"{path}/carrusel2.jpg")" class="d-block w-100" alt="AISHA">
                    </div>
                    <div class="carousel-item">
                        <img src="@($"{path}/carrusel3.jpg")" class="d-block w-100" alt="Check Up">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Anterior</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Siguiente</span>
                </button>
            </div>
        </section>

        <div class="row">
            <div class="col-md-4">
                <div class="card h-100 d-flex flex-column shadow-sm">
                    <img src="@($"{path}/imagen3.jpg")" class="card-img-top" alt="Psicología Hospitalaria">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Psicología Hospitalaria</h5>
                        <p class="card-text">Apoyo emocional y acompañamiento durante el proceso de duelo.</p>
                        <a class="btn btn-secondary mt-auto" asp-area="" asp-controller="Paciente" asp-action="Index">Agenda una cita</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 d-flex flex-column shadow-sm">
                    <img src="@($"{path}/imagen4.jpg")" class="card-img-top" alt="Trastornos del Sueño">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Trastornos del Sueño</h5>
                        <p class="card-text">Expertos en insomnio, apnea del sueño y más.</p>
                        <a class="btn btn-secondary mt-auto" asp-area="" asp-controller="Paciente" asp-action="Index">Agenda una cita</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 d-flex flex-column shadow-sm">
                    <img src="@($"{path}/imagen5.jpg")" class="card-img-top" alt="Cirugía Robótica">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Cirugía Robótica</h5>
                        <p class="card-text">Tecnología avanzada para procedimientos quirúrgicos.</p>
                        <a class="btn btn-secondary mt-auto" asp-area="" asp-controller="Paciente" asp-action="Index">Agenda una cita</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>