<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hospital Johnson</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/styles.css">

    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg barra-navegacion">
            <div class="container d-flex align-items-center">
                <img src="~/img/principal/hospital-logo.jpeg" alt="Hospital Johnson Logo" class="me-3" style="height: 80px;">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menu" aria-controls="menu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="menu">
                    <ul class="navbar-nav ms-auto text-center w-100">
                        @{
                            bool isLoggedIn = Context.Session.GetString("UserName") != null;
                            // string currentController = ViewContext.RouteData.Values["controller"]?.ToString(); // Ya no necesitamos esto aquí
                            // string currentAction = ViewContext.RouteData.Values["action"]?.ToString(); // Ya no necesitamos esto aquí
                        }

                        <li class="nav-item w-100 my-1">
                            <a class="btn custom-btn w-100" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>

                        @if (!isLoggedIn)
                        {
                            <li class="nav-item w-100 my-1">
                                <a class="btn custom-btn w-100" asp-controller="Paciente" asp-action="Especialidades">Especialidades</a>
                            </li>
                            <li class="nav-item w-100 my-1">
                                <a class="btn custom-btn w-100" asp-controller="Account" asp-action="Login">Iniciar Sesión</a>
                            </li>
                            <li class="nav-item w-100 my-1">
                                <a class="btn custom-btn w-100" asp-controller="Account" asp-action="Register">Registrarse</a>
                            </li>
                        }
                        else // Bloque para usuario logueado (Paciente o Administrador)
                        {
                            <li class="nav-item w-100 my-1">
                                <a class="btn custom-btn w-100" asp-controller="Paciente" asp-action="Especialidades">Especialidades</a>
                            </li>
                            <li class="nav-item w-100 my-1">
                                <a class="btn custom-btn w-100" asp-controller="Paciente" asp-action="AgendarCita">Agendar Cita</a>
                            </li>
                            @* Se eliminó el enlace a "Mis Citas" (CitasProgramadas) para el paciente, según tu requisito. *@
                            <li class="nav-item w-100 my-1 dropdown">
                                <a class="btn custom-btn dropdown-toggle w-100" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Hola, @Context.Session.GetString("UserName")
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-controller="Paciente" asp-action="Perfil">Mi Perfil</a></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="CambioContrasenia">Cambiar Contraseña</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="w-100">
                                            <button type="submit" class="dropdown-item">Cerrar Sesión</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container-fluid px-0">
        @RenderBody()
    </main>

    <footer class="footer mt-auto">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-4 mb-3">
                    <h5>Síguenos</h5>
                    <a href="https://facebook.com" target="_blank" class="d-block">
                        <i class="bi bi-facebook"></i> Facebook
                    </a>
                    <a href="https://instagram.com" target="_blank" class="d-block">
                        <i class="bi bi-instagram"></i> Instagram
                    </a>
                    <a href="https://twitter.com" target="_blank" class="d-block">
                        <i class="bi bi-twitter"></i> Twitter
                    </a>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Dirección</h5>
                    <p>
                        Puente de Piedra 150<br>
                        Col. Toriello Guerra<br>
                        Tlalpan, CDMX
                    </p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Contacto</h5>
                    <p>Teléfono: +52 55 1234 5678</p>
                    <p>Email: contacto@hospitaljohnson.com</p>
                </div>
            </div>
            <div class="row">
                <div class="col text-center">
                    <p>&copy; 2025 Hospital Johnson. Todos los derechos reservados.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>