@{
    ViewData["Title"] = "Mis Citas Programadas | Hospital Johnson";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/css/doctor.css">
}

<div class="doctor-dashboard py-5">
    <div class="mb-4">
        <h2>Hola Dr. <span class="text-primary">González</span>. Bienvenido.</h2>
        <p class="text-muted">@DateTime.Now.ToString("dddd, dd 'de' MMMM 'de'yyyy", new System.Globalization.CultureInfo("es-ES"))</p>
    </div>

    <div class="mb-4">
        <label for="viewSelect" class="form-label">Mostrar citas por:</label>
        <select id="viewSelect" class="form-select w-auto">
            <option value="mes">Mes</option>
            <option value="semana">Semana</option>
            <option value="dia" selected>Día</option>
        </select>
    </div>

    <div id="citasContainer">
        <div class="card mb-3 shadow-sm">
            <div class="card-header citas-header">
                <h5 class="mb-0">Citas del día</h5>
            </div>
            <div class="card-body">
                <div class="list-group">
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>09:00 AM</strong> - Juan Pérez
                            <div class="text-muted small">Consulta general</div>
                        </div>
                        <span class="badge bg-primary rounded-pill">Confirmada</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>10:30 AM</strong> - María López
                            <div class="text-muted small">Control postoperatorio</div>
                        </div>
                        <span class="badge bg-primary rounded-pill">Confirmada</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>12:00 PM</strong> - Ana Torres
                            <div class="text-muted small">Revisión de resultados</div>
                        </div>
                        <span class="badge bg-warning text-dark rounded-pill">Pendiente</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("viewSelect").addEventListener("change", function() {
            const view = this.value;
            const container = document.getElementById("citasContainer");
            const today = new Date();

            if (view === 'dia') {
                container.innerHTML = `
                    <div class="card mb-3 shadow-sm">
                        <div class="card-header citas-header">
                            <h5 class="mb-0">Citas del día</h5>
                        </div>
                        <div class="card-body">
                            <div class="list-group">
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>09:00 AM</strong> - Juan Pérez
                                        <div class="text-muted small">Consulta general</div>
                                    </div>
                                    <span class="badge bg-primary rounded-pill">Confirmada</span>
                                </div>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>10:30 AM</strong> - María López
                                        <div class="text-muted small">Control postoperatorio</div>
                                    </div>
                                    <span class="badge bg-primary rounded-pill">Confirmada</span>
                                </div>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>12:00 PM</strong> - Ana Torres
                                        <div class="text-muted small">Revisión de resultados</div>
                                    </div>
                                    <span class="badge bg-warning text-dark rounded-pill">Pendiente</span>
                                </div>
                            </div>
                        </div>
                    </div>`;
            } else if (view === 'semana') {
                container.innerHTML = `
                    <div class="card mb-3 shadow-sm">
                        <div class="card-header citas-header">
                            <h5 class="mb-0">Citas de la semana</h5>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-info" role="alert">
                                Vista de ${view} seleccionada. Aquí irían las citas agrupadas.
                            </div>
                        </div>
                    </div>`;
            }
            else if (view === 'mes') {
                container.innerHTML = `
                    <div class="card mb-3 shadow-sm">
                        <div class="card-header citas-header">
                            <h5 class="mb-0">Citas del mes</h5>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-info" role="alert">
                                Vista de ${view} seleccionada. Aquí irían las citas agrupadas.
                            </div>
                        </div>
                    </div>`;
            }
        });
    </script>
}